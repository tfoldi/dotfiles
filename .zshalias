alias a='alias'                                                                 
a pd=pushd
a pop=popd
a boldprompt='prompt="%m %B%~%b %# "' longlongprompt='prompt="%m %/ %#\n"'
a longprompt='prompt="%m %~ %# "' nlprompt='prompt="%m %B%~%b %#\n"'
a shortprompt='prompt="%m %2c %# "'
a md='mkdir' rd='rmdir' ren='mv' tman='man -P"TERMCAP=\"$TERM:md=:me=:us=:ue=:\" ul | exec less"'
 a vt100='TERM=vt100' vt200='TERM=vt220' vt220='TERM=vt220' vt300='TERM=vt300'
 a vt102='TERM=vt102'
 a ektelen='tr "íÍüùÜÙóÓõÕúÚéëÉËáäåÁÄÅöôÖÔûÛ" "iIuuUUoOoOuUeeEEaaaAAAooOOuU"'
 a hsync='fc -AI' noul='TERMCAP="$TERM:md=:me=:us=:ue=:" ul'
 a whois="whois -h RS.INTERNIC.NET"
 manman () { nroff -man "$@"|less }
 man () { (umask 022 ; exec command man "$@") }
addpath () { path=( "$@" $path ) }
title () {
    if [[ $TERM = xterm* ]] then
        if [[ -z "$2" ]] then
            eval "precmd () { print -Pn \"\E]2;$1\07\" }"
        else
            eval "precmd () { print -Pn \"\E]1;$2\07\E]2;$1\07\" }"
        fi
    fi
}
ff () { find / -name "$@" -print 2> /dev/null }
count () { echo $# }
reload () { unfunction "$@" ; autoload "$@" }
tw() { latex $@; xdvi $@ }


